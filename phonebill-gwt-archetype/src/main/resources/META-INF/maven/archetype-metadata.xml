<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="phonebill-gwt">
  <requiredProperties>
    <requiredProperty key="assignmentName">
      <defaultValue>Project5</defaultValue>
    </requiredProperty>
    <requiredProperty key="studentId" />
    <requiredProperty key="studentName" />
    <requiredProperty key="studentEmailAddress" />
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/webapp</directory>
      <includes>
        <include>**/*.html</include>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>