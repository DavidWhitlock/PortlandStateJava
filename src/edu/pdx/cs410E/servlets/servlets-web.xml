<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <description>Example Servlets for CS410E</description>

  <servlet>
    <servlet-name>SystemProperties</servlet-name>
    <servlet-class>edu.pdx.cs410E.servlets.SystemPropertiesServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CurrentTime</servlet-name>
    <servlet-class>edu.pdx.cs410E.servlets.CurrentTimeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletInfo</servlet-name>
    <servlet-class>edu.pdx.cs410E.servlets.ServletInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SystemProperties</servlet-name>
    <url-pattern>/properties</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CurrentTime</servlet-name>
    <url-pattern>/time</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletInfo</servlet-name>
    <url-pattern>/servletInfo</url-pattern>
  </servlet-mapping>
</web-app>